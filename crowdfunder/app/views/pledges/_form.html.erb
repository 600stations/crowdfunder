<div class="pledge_form">
<%= form_for([@project,@pledge]) do |f| %>
  <% if @pledge.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pledge.errors.count, "errors")%> prohibited this pledge from being completed:</h2>
      <ul>
        <% @pledge.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
  <strong>  <%= f.label :amount %>  </strong><br>
    <%= f.number_field :amount %>
  </div>

  <br>
  <div class="action">
    <%= f.submit %>
  </div>
  <% end %>
