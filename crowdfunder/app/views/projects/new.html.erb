<h1>New Project</h1>

<%= form_for @project do |f| %>
  <div class="field">
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </div>
<br/>
  <div class="field">
    <%= f.label :description %><br/>
    <%= f.text_area :description %>
  </div>
<br/>
  <div class="field">
    <%= f.label :category %><br/>
    <%= f.collection_select(:category_id, Category.all, :id, :name ) %>
  </div>
<br/>
  <div class="field">
    <%= f.label :deadline %><br/>
    <%= f.date_field :deadline %>
  </div>
<br/>
  <div class="field">
    <%= f.label :goal %><br/>
    <%= f.number_field :goal %>
  </div>
<br/>
<h2>Rewards</h2>

  <%= f.fields_for :rewards, [Reward.new, Reward.new] do |reward_fields| %>
   <div class="field">
     <%= reward_fields.label :amount %><br/>
     <%= reward_fields.text_field :amount %>
   </div>
   <br/>
     <% end %>
  <%= f.submit %>

  <% end %>
